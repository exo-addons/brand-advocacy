<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
  <portlet>
    <description xml:lang="EN">Brand Advocacy Backend Portlet</description>
    <portlet-name>JuzBrandAdvocacyBackendPortlet</portlet-name>
    <display-name xml:lang="EN">Juzu Brand Advocacy backend Portlet</display-name>
    <portlet-class>org.exoplatform.community.brandadvocacy.portlet.backend.BackendPortlet</portlet-class>
    <supports>
        <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Brand Advocacy Backend Portlet</title>
      <short-title>Brand Advocacy Backend Portlet</short-title>
      <keywords>brand-advocacy-webapp</keywords>
    </portlet-info>
  </portlet>
  <portlet>
    <description xml:lang="EN">Brand Advocacy Frontend Portlet</description>
    <portlet-name>JuzBrandAdvocacyFrontendPortlet</portlet-name>
    <display-name xml:lang="EN">Juzu Brand Advocacy Frontend Portlet</display-name>
    <portlet-class>org.exoplatform.community.brandadvocacy.portlet.frontend.FrontendPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Brand Advocacy Frontend Portlet</title>
      <short-title>Brand Advocacy Frontend Portlet</short-title>
      <keywords>brand-advocacy-webapp</keywords>
    </portlet-info>
  </portlet>

  <portlet>
    <description xml:lang="EN">Brand Advocacy Logout Portlet</description>
    <portlet-name>JuzBrandAdvocacyLogoutPortlet</portlet-name>
    <display-name xml:lang="EN">Juzu Brand Advocacy Logout Portlet</display-name>
    <portlet-class>org.exoplatform.community.brandadvocacy.portlet.logout.LogoutPortlet</portlet-class>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Brand Advocacy Frontend Portlet</title>
      <short-title>Brand Advocacy Frontend Portlet</short-title>
      <keywords>brand-advocacy-webapp</keywords>
    </portlet-info>
  </portlet>

</portlet-app>
